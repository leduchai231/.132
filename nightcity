local HttpService = game:GetService("HttpService")
local HttpRequest = (syn and syn.request) or (http and http.request) or (request)
if not HttpRequest then
    warn("âŒ KhÃ´ng tÃ¬m tháº¥y hÃ m gá»­i HTTP request! HÃ£y dÃ¹ng executor há»— trá»£ syn.request hoáº·c http.request.")
    return
end

local function sendToTool(username, level, key)
    local data = HttpService:JSONEncode({username=username, level=level, key=key})
    HttpRequest({
        Url = "http://localhost:5005/",
        Method = "POST",
        Headers = {['Content-Type'] = 'application/json'},
        Body = data
    })
end

-- Sau khi láº¥y Ä‘Æ°á»£c username, level, key:
sendToTool(playerName, currentLevel, getgenv().key)
